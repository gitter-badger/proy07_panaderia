colContenido = #F0F0F0

#bloqueDer
	#contenido
		#destacado
			article
				div
					p 
						line-height 2rem
						color white 
						text-shadow 2px 2px 2px rgba(0, 0, 0, .70)
						&:last-child
							margin-top 1.5rem

					border-left 25px solid colH
					padding-left 15px
					position absolute
					top 40px

				background url(../img/imgDestacada.jpg) no-repeat center
				background-size: cover
				max-width 100%
				min-height 406px
				padding-top: 10px
				position relative

		#testimonioHome
			article
				div, img
					display inline-block
				div
					blockquote
						border-bottom 1px solid #5b4a31
						color #5b4a31
						font-size 1.4rem
						font-style italic
						font-weight 700
						line-height 2.2rem
						padding-bottom 1rem
						text-shadow 1px 1px rgba(255, 255, 255, .50)
					p 
						border-top 1px solid #ebddcb
						color #5b4a31
						font-weight 700
						padding-top 1rem
				
					margin-left 1rem
					max-width 85%
					text-align justify
					vertical-align top
				img
					width 70px
					border 3px solid white

			background rgba(198, 162, 117, 0.5)
			padding 30px 25px

		#preparacionHome
			padding 25px 0px
			article
				display inline-block
				width 30%
				margin-left 1.3rem
				text-shadow  0 1px 0 white
				a 
					font-weight 700
					&:after
						content "\00BB"
				img
					//border 2px solid white
					width 100%
					margin 1rem 0


		background rgba(colContenido, 0.5)
		box-shadow: 0px 0px 10px 0px rgba(white, 0.75)
		border-bottom-right-radius: 10px;
		border-bottom-left-radius: 10px;

	.pagina-interna
		text-shadow 0 1px 0 white
		border-top solid 6px colH
		hr 
			width 100%
			margin 3rem 0
			height 1px
			border-bottom solid 1px 7d7160
		img
			border solid 3px white
		section
			header
				img
					width 100%
					border none
				.sombra
					height 7px
					background colH
					box-shadow inset 0px 3px 5px 0px rgba(0,0,0,0.65)

				.leyenda
					background colH
					margin-bottom 4.5rem
					padding 25px 25px 35px 25px

					.titulo, .subtitulo
						color white
						text-shadow 0 1px 0 #7D1414
					.titulo
						font-size 3rem
						margin-bottom 15px

					.subtitulo
						font-size 1.5rem
						font-style normal
						font-weight normal

			#body-preparaciones
				padding 0 2.5rem

				article
					overflow hidden
					&:last-child
						img
							margin-bottom 3rem
					h3
						margin-bottom 1rem
					
				img
					margin-right 2rem
					float left
				
					
						


